set daemon 120           # check services at 2-minute intervals
    with start delay 120 # delay the first check by 4-minutes

check process direwolf with pidfile /var/run/direwolf.pid
    start program = "/etc/init.d/S50direwolf start"
    stop program = "/etc/init.d/S50direwolf stop"

check process kissattach matching "kissattach"
    start program = "/etc/init.d/S55kiss start"
    stop program = "/etc/init.d/S55kiss stop"
    depends on direwolf

check process aprx with pidfile /var/run/aprx.pid
    start program = "/etc/init.d/S60aprx start"
    stop program = "/etc/init.d/S60aprx stop"
    depends on kissattach

check process rtl_fm with pidfile /var/run/rtl_fm.pid
    start program = "/etc/init.d/S65rtlfm start"
    stop program = "/etc/init.d/S65rtlfm stop"
    depends on direwolf
