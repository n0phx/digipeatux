#!/bin/sh
#
# Load kernel modules listed in /etc/modules

MODULES="/etc/modules"

load_modules() {
  errors=0

  while read -r mod; do
    modprobe $mod || errors=1
  done < "$MODULES"

  return "$errors"
}

case "$1" in
    start)
        load_modules && echo "OK" || (echo "FAIL"; exit 1)
        ;;
    *)
        echo "Usage: $0 {start}"
        ;;
esac

exit 0
